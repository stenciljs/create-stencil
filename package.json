{
  "name": "create-stencil",
  "version": "4.0.2",
  "description": "Quickly create a new stencil component project: npm init stencil",
  "repository": {
    "type": "git",
    "url": "https://github.com/stenciljs/create-stencil"
  },
  "type": "module",
  "exports": "./index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "start": "node index.js",
    "build": "run-s build.clean build.bundle build.minify",
    "build.clean": "rimraf dist",
    "build.bundle": "rollup -c",
    "build.minify": "terser --compress --mangle --toplevel --output index.js -- ./dist/index.js",
    "test": "vitest",
    "prettier": "npm run prettier.base -- --write",
    "prettier.base": "prettier --cache \"./**/*.{ts,tsx,js,jsx}\"",
    "prettier.dry-run": "npm run prettier.base -- --list-different",
    "release": "np",
    "watch": "run-p watch.*",
    "watch.tsc": "tsc --watch",
    "watch.bundle": "rollup -c --watch",
    "watch.minify": "onchange './dist/index.js' -- npm run build.minify"
  },
  "engines": {
    "node": ">=10.10.0",
    "npm": ">=6.0.0"
  },
  "bin": {
    "create-stencil": "index.js"
  },
  "devDependencies": {
    "@clack/prompts": "^0.11.0",
    "@ionic/prettier-config": "^4.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^25.0.9",
    "@types/prompts": "^2.4.9",
    "@types/yauzl": "^2.10.3",
    "@vitest/coverage-v8": "^4.0.4",
    "colorette": "^2.0.20",
    "https-proxy-agent": "^7.0.6",
    "node-fetch": "^3.3.2",
    "np": "^10.2.0",
    "npm-run-all2": "^8.0.1",
    "onchange": "^7.1.0",
    "prettier": "3.8.0",
    "replace-in-file": "^8.3.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.40.2",
    "sisteransi": "^1.0.5",
    "terser": "^5.39.1",
    "typescript": "~5.9.2",
    "vitest": "^4.0.4",
    "yauzl": "^3.2.0"
  },
  "author": "Ionic Team & William M. Riley",
  "license": "MIT",
  "keywords": [
    "stencil",
    "stenciljs",
    "web components",
    "create-app",
    "cli",
    "progress web app",
    "ionic"
  ],
  "prettier": "@ionic/prettier-config",
  "volta": {
    "node": "20.15.1",
    "npm": "10.8.3"
  }
}
